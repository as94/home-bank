<Window x:Class="HomeBank.Ui.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:HomeBank.Ui.Views"
        mc:Ignorable="d"
        Height="600"
        Width="1024"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        Foreground="White">

    <Window.Resources>
        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu"
                                           Storyboard.TargetProperty="(FrameworkElement.Width)">

                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="60" />

                <EasingDoubleKeyFrame KeyTime="0:0:0.5 "
                                      Value="200" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMenu"
                                           Storyboard.TargetProperty="(FrameworkElement.Width)">

                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="200" />

                <EasingDoubleKeyFrame KeyTime="0:0:0.5 "
                                      Value="60" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click"
                      SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource OpenMenu}" />
        </EventTrigger>

        <EventTrigger RoutedEvent="ButtonBase.Click"
                      SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource CloseMenu}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="#FF337FA2">
        <Grid Height="60"
              VerticalAlignment="Top"
              Background="#FF418362">

            <TextBlock Text="Home Bank App"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="22" />

            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                <TextBlock HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Text="Anatoly Sorokin"
                           FontSize="18" />

                <materialDesign:PopupBox Margin="10"
                                         PlacementMode="BottomAndAlignRightEdges"
                                         StaysOpen="False">

                    <StackPanel Width="150">
                        <Button Content="Account" />
                        <Button Content="Help" />
                        <Separator />
                        <Button Content="Settings" />
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Grid>
        <Grid Height="500"
              Width="1000"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom">

            <views:HomeView x:Name="ViewHome" />
            
            <views:TransactionView x:Name="ViewTransaction"
                                   Visibility="Collapsed" />
            
            <views:CategoryView x:Name="ViewCategory"
                                Visibility="Collapsed" />

        </Grid>
        <Grid x:Name="GridMenu"
              Width="60"
              HorizontalAlignment="Left"
              Background="#FF7BB7D8">

            <StackPanel>
                <Grid Height="150"
                      Background="White">
                    <Button x:Name="ButtonOpenMenu"
                            Width="60"
                            Height="60"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Foreground="#FF356383"
                            Click="ButtonOpenMenu_Click">

                        <materialDesign:PackIcon Foreground="#FF356383"
                                                 Width="25"
                                                 Height="25"
                                                 Kind="Menu" />

                    </Button>

                    <Button x:Name="ButtonCloseMenu"
                            Visibility="Collapsed"
                            Width="60"
                            Height="60"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Foreground="#FF356383"
                            Click="ButtonCloseMenu_Click">

                        <materialDesign:PackIcon Foreground="#FF356383"
                                                 Width="25"
                                                 Height="25"
                                                 Kind="ArrowLeft" />

                    </Button>
                </Grid>
                <ListView x:Name="ListViewMenu"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Foreground="#FF356383"
                          SelectionChanged="ListView_SelectionChanged">

                    <ListViewItem x:Name="ButtonHome"
                                  Height="60">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard"
                                                     VerticalAlignment="Center"
                                                     Margin="10"
                                                     Width="25"
                                                     Height="25" />

                            <TextBlock Text="Home"
                                       VerticalAlignment="Center"
                                       Margin="20 10" />
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem x:Name="ButtonTransaction"
                                  Height="60">
                        
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cash"
                                                     VerticalAlignment="Center"
                                                     Margin="10"
                                                     Width="25"
                                                     Height="25" />

                            <TextBlock Text="Transactions"
                                       VerticalAlignment="Center"
                                       Margin="20 10" />
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem x:Name="ButtonCategory"
                                  Height="60">
                        
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cards"
                                                     VerticalAlignment="Center"
                                                     Margin="10"
                                                     Width="25"
                                                     Height="25" />

                            <TextBlock Text="Categories"
                                       VerticalAlignment="Center"
                                       Margin="20 10" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
